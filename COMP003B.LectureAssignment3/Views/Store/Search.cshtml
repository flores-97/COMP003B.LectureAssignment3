@{
    //set the title and layout for the page
    ViewData["Title"] = "Store - Search Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--set the model-->
@model string
<!--Display result-->
<h2>Search Results</h2>

<!--check if the model is not null or empty-->
@if (!string.IsNullOrEmpty(Model))
{
    <p>Search term: <strong>@Model</strong></p>
}
else
{
    <p>No search category provided.</p>
}
